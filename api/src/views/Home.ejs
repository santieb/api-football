<!DOCTYPE html>
<html>
<head>
    <title>Historical Football Matches from Argentina</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-800 text-white">
    <h1 class="text-4xl text-center py-6 mb-8">Historical Football Matches from Argentina</h1>
    <!-- Contadores y tasas -->
    <div class="flex flex-wrap justify-center">
        <div class="bg-gray-700 shadow-lg rounded-xl p-10 m-4">
            <h2 class="text-lg font-bold mb-4">Total Wins</h2>
            <p class="text-3xl font-bold"><%= counters.win %></p>
        </div>
        <div class="bg-gray-700 shadow-lg rounded-xl p-10 m-4">
            <h2 class="text-lg font-bold mb-4">Total Losses</h2>
            <p class="text-3xl font-bold"><%= counters.lose %></p>
        </div>
        <div class="bg-gray-700 shadow-lg rounded-xl p-10 m-4">
            <h2 class="text-lg font-bold mb-4">Total Draws</h2>
            <p class="text-3xl font-bold"><%= counters.draw %></p>
        </div>
        <div class="bg-gray-700 shadow-lg rounded-xl p-10 m-4">
            <h2 class="text-lg font-bold mb-4">Win Rate</h2>
            <p class="text-3xl font-bold"><%= ((counters.win / (counters.win + counters.lose + counters.draw)) * 100).toFixed(2) %>%</p>
        </div>
        <div class="bg-gray-700 shadow-lg rounded-xl p-10 m-4">
            <h2 class="text-lg font-bold mb-4">Lose Rate</h2>
            <p class="text-3xl font-bold"><%= ((counters.lose / (counters.win + counters.lose + counters.draw)) * 100).toFixed(2) %>%</p>
        </div>
        <div class="bg-gray-700 shadow-lg rounded-xl p-10 m-4">
            <h2 class="text-lg font-bold mb-4">Draw Rate</h2>
            <p class="text-3xl font-bold"><%= ((counters.draw / (counters.win + counters.lose + counters.draw)) * 100).toFixed(2) %>%</p>
        </div>
    </div>

    <table class="w-4/5 mx-auto bg-gray-700 shadow-lg rounded-xl my-8">
        <thead>
            <tr class="bg-green-500 text-white">
                <th class="py-4">Date</th>
                <th class="py-4">Home Team</th>
                <th class="py-4">Away Team</th>
                <th class="py-4">Home Score</th>
                <th class="py-4">Away Score</th>
                <th class="py-4">Tournament</th>
                <th class="py-4">City</th>
                <th class="py-4">Country</th>
                <th class="py-4">Neutral</th>
            </tr>
        </thead>
        <tbody>
            <% matches.forEach(function(match) { %>
                <tr class="hover:bg-gray-600">
                    <td class="py-4"><%= match.date %></td>
                    <td class="py-4"><%= match.home_team %></td>
                    <td class="py-4"><%= match.away_team %></td>
                    <td class="py-4"><%= match.home_score %></td>
                    <td class="py-4"><%= match.away_score %></td>
                    <td class="py-4"><%= match.tournament %></td>
                    <td class="py-4"><%= match.city %></td>
                    <td class="py-4"><%= match.country %></td>
                    <td class="py-4"><%= match.neutral %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
